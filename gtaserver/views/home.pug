doctype html
html
    head
        title GTA
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        link(rel='stylesheet', type='text/css', href='/stylesheets/homepageStyle.css')
    body
        header
            a#logout.glyphicon.glyphicon-off(href='/signin')
            h1(style="padding-top:2%;padding-bottom:2%;") Graphical Tagging Application
            h2(style="padding-bottom:2%;") Welcome: #{UserName}!
        ul.nav.nav-tabs
            li.active
                a(data-toggle='tab', href='#groups') Groups
            li
                a(data-toggle='tab', href='#systems') Systems
            li
                a(data-toggle='tab', href='#account') Account
        #content.tab-content
            #groups.tab-pane.fade.in.active
                h3 System Groups
                p Here are the Groups you are a member of.
                button.btn.btn-primary(data-toggle='collapse', data-target='#demo') Create Group
                #demo.collapse
                    form#createGroup.form(action='/createGroup', method='POST')
                        input(type='text', name='name', placeholder='Group Name...')
                        br
                        input(type='text', name='other', placeholder='Other Info...')
                        br
                        input(type='text', name='idk', placeholder='Not sure...')
                        br
                        select(name='usersDropdown')
                            option(value='1') User 1
                            option(value='2') User 2
                            option(value='3') User 3
                            option(value='4') User 4
                        button
                            span.glyphicon.glyphicon-plus
                        br
                        p#userList Running list of users:
                        select(name='systems')
                            option(value='1') System 1
                            option(value='2') System 2
                            option(value='3') System 3
                            option(value='4') System 4
                        button
                            span.glyphicon.glyphicon-plus
                        br
                        p#userList Running list of systems:
                        input.btn.btn-success(type='submit', value='Create')
                        br
            #systems.tab-pane.fade
                h1(style="padding-top:2%;padding-bottom:2%;")="Table of Systems"

                div(class="table table-responsive")
                    table(class="table table-hover")
                        tr
                            each i in keys
                                th
                                    a= i
                            th
                                //- input(type="text",placeholder="New Tag Name")
                                //- input(type="submit",value="Click Me!")
                        each i in data
                            form(action="/dbupdate" method="POST")
                                tr
                                    -var int = 0;
                                    //- td= id[int]
                                    each j,k in i


                                        -if(k=="_id")
                                            input(type="hidden",value=j,name="_id")
                                            -continue


                                        td
                                            input(type='text',name=keys[int], value=j,style="border:0px solid;")
                                            -int=int+1;
                                    td
                                        input(type="submit",  value="Update")
            #account.tab-pane.fade
                h3 Account Overview
                p Your account information.
                img(src="https://cdn.dribbble.com/users/135467/screenshots/3480075/purrito-generic.gif")
